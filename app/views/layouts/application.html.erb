<!DOCTYPE html>
<html>
<head>
  <title>Stash: Model Yachting</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>

    <!-- Fixed navbar -->
    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed"
            data-toggle="collapse" data-target="#navbar" aria-expanded="false"
            aria-controls="navbar">b
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Stash App</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="/"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></a></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown"
                                                  role="button" aria-expanded="false"><span class="glyphicon glyphicon-tags" aria-hidden="true">&nbsp;</span><span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href='#'>All items</a></li>
                <li class="divider"></li>
                <% @tags.each do |tag| %>
                  <li><a href="/tags/<%= tag['id'] %>/resources"><%= tag["name"] %></a></li>
                <% end %>
              </ul>
            </li>
          </ul>
          <!--- Right Navbar toggle off with config var --->
          <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><span class="glyphicon glyphicon-book" aria-hidden="true"></span>&nbsp;<span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <% @collections.each do |collection| %>
                  <li><a href="/collections/<%= collection['id'] %>"><%= collection["name"] %></a></li>
                <% end %>
              </ul>
            </li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">
      <%= yield %>

      <hr>

      <footer>
        <div class="row">
          <div class="col-lg-12">
            <p>Stash, 2015</p>
          </div>
        </div>
      </footer>
    </div>
</body>
</html>
